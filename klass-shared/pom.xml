<!--                </exclusion>-->
<!--            </exclusions>-->
<!--        </dependency>-->
        <dependency>
            <groupId>org.apache.solr</groupId>
            <artifactId>solr-dataimporthandler</artifactId>
            <version>5.5.0</version>
            <!--https://github.com/FasterXML/jackson-dataformat-xml/issues/132-->
